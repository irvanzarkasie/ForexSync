	<build>
		<plugins>
			<plugin>
				<groupId>com.smartbear.soapui</groupId>
				<artifactId>soapui-maven-plugin</artifactId>
				<version>5.4.0</version>
				<configuration>
					<outputFolder>src/test/soapui/surefire-reports</outputFolder>
					<junitReport>true</junitReport>
					<printReport>false</printReport>
				</configuration>
				<executions>
                   <execution>
                   		<id>StartMock</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>mock</goal>
                        </goals>
                        <configuration>
                            <projectFile>src/test/soapui/ForexJournalAdd-soapui-project.xml</projectFile>
                            <mockService>TransactionPortBinding MockService</mockService>
                            <host>10.161.87.7:8090</host>
                            <noBlock>false</noBlock>
							<!-- overwrite endpoint url 
                            <username></username>
                            <password></password>
                            --> 
                            <projectProperties>
                                <value>message=Hello World!</value>
                            </projectProperties>
                        </configuration>
                    </execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
